<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/statusbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4F87FF"
        android:padding="4dp">

        <ImageView
            android:id="@+id/iv_lib_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@mipmap/back" />

        <include layout="@layout/v_round_search" />

        <TextView
            android:id="@+id/tv_lib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:text="@string/lib_search"
            android:textColor="#c8ffffff"
            android:textSize="18sp"
            android:visibility="gone" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frame_lib_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>