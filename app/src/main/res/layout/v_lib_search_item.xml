<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="7dp">

        <ImageView
            android:id="@+id/iv_lib_icon"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:src="@drawable/lib_no_data" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lib_item_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF5B5B5B"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="沉默的大多数" />

            <TextView
                android:id="@+id/tv_lib_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#FF5B5B5B"
                android:textSize="12sp"
                tools:text="王小波" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/lib_isbn"
                        android:textColor="#FF7B7B7B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/lib_remain_num"
                        android:textColor="#FF7B7B7B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/lib_publisher"
                        android:textColor="#FF7B7B7B" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_lib_item_isbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="#FF7B7B7B"
                        tools:text="索书号:" />

                    <TextView
                        android:id="@+id/tv_lib_item_remain_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="#FF7B7B7B"
                        tools:text="可外借:" />

                    <TextView
                        android:id="@+id/tv_lib_item_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="#FF7B7B7B"
                        tools:text="出版社信息:" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_gravity="bottom"
        android:background="#E7E7E7" />
</FrameLayout>