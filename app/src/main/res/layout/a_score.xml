<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/statusbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <Button
            android:id="@+id/back_im"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="成绩单"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ranksContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ffebebeb"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:textSize="18dp"
            android:id="@+id/academic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017-2108"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:textSize="18dp"
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="第1学期"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:textSize="18dp"
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/filter"
            android:gravity=""
            android:text="筛选"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ff9cbcff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="课程名称"    android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="0dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="课程性质"
                android:textSize="18dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="学分"
                android:textSize="18dp" />

            <TextView
                android:layout_width="0dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="成绩"
                android:textSize="18dp" />

            <TextView
                android:layout_width="0dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:gravity="center"
                android:text=" 绩点"
                android:textSize="18dp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/score_container_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>