<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="手机验证找回密码"
        android:textColor="@color/FF3d3d3d"
        android:textSize="26dp" />
    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="11"
            android:inputType="numberDecimal"
            android:id="@+id/phonenumber_edit"
            android:textSize="18dp"
            android:hint="手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/clear_phone_number"
            android:id="@+id/clear_phonenumber_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/verification_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:hint="验证码"
            android:inputType="numberDecimal"
            android:maxEms="6"
            android:maxLength="6" />

        <Button
            android:background="@drawable/verification_code__bt_bg"
            android:id="@+id/get_verification_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="获取验证码"
            android:textColor="@color/FF4F87FF"
            android:textSize="15dp" />
    </FrameLayout>

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="请输入6-18位密码"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_button_bg"
        android:text="确认并登陆"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>